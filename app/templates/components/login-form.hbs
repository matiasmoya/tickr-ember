<form class="form-horizontal" action="index.html" {{action "authenticate"}}>
  <div class="content">
    <h4 class="title">Login Access</h4>
      <div class="form-group">
        <div class="col-sm-12">
          <div class="input-group">
            {{#if errorMessage}}
              {{errorMessage}}
            {{/if}}
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            {{input value=identification placeholder="Enter your Email" class="form-control"}}
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            {{input value=password type="password" placeholder="Enter Password" class="form-control"}}
          </div>
        </div>
      </div>
      
  </div>
  <div class="foot">
    <button class="btn btn-default" data-dismiss="modal" type="button">Register</button>
    <button class="btn btn-primary" data-dismiss="modal" type="submit">Log me in</button>
  </div>
</form>
