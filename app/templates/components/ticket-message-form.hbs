<div class="row">
  <div class="col-md-12">
    <div class="block-flat">
      <div class="header">              
        <h3>Post a message on this ticket</h3>
      </div>
      <div class="content">
         <form class="form-horizontal group-border-dashed" {{action "createTicketMessage" on="submit"}} style="border-radius: 0px;">
          <div class="form-group">
            <label class="col-sm-3 control-label">Textarea</label>
            <div class="col-sm-6">
              {{textarea value=content type="text" class="form-control"}}
            </div>
            {{#if errorMessage}}
              {{errorMessage}}
            {{/if}}
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-6">
              <button type="submit" class="btn btn-primary btn-block">Send</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
